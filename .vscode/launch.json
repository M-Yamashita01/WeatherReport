{
  // IntelliSense を使用して利用可能な属性を学べます。
  // 既存の属性の説明をホバーして表示します。
  // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "cwd": "${workspaceRoot}",
      "remoteHost": "127.0.0.1",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}",
      "preLaunchTask": "${workspaceRoot}/TestExecution.sh",
      "internalConsoleOptions": "openOnFirstSessionStart"
    },
    {
      "name": "RSpec - all",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bundle",
      "args": [
          "exec",
          "rspec",
          "-f",
          "d",
          "${workspaceRoot}/spec/models/weather/*"
      ],
      "useBundler": true,
      "pathToBundler": "${workspaceRoot}/bundle",
      "pathToRDebugIDE": "/Users/masatoyamashita/.rbenv/shims/rdebug-ide",
      "env": {
          "BROWSER": "chrome"
      }
    },
    {
      "name": "RSpec - active spec file only",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bundle",
      "args": [
          "exec",
          "rspec",
          "-f",
          "d",
          "${file}"
      ],
      "useBundler": true,
      "pathToBundler": "${workspaceRoot}/bundle",
      "pathToRDebugIDE": "/Users/masatoyamashita/.rbenv/shims/rdebug-ide",
      "env": {
          "BROWSER": "chrome"
      }
  }
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server"
      ]
    }
  ]
}