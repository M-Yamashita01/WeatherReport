<h1>Listing articles</h1>
<table>

<% if user_signed_in? %> <!--ログインしているか調べる>
  <!-- ログインしていた時の処理> -->
  <h2>現在<%= current_user.name %>さんがログインしています。</h2>
  <h4> メールアドレス: <%= current_user.email %></h4>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %> <!--ログアウトする-->
<% else %>
  <!-- ログインしていなかった時の処理-->
  <h2> 現在ログインしていません </h2>
  <%= link_to "ログイン", new_user_session_path, class: 'post' %> <!--ログイン画面に移行する-->
  <%= link_to "新規登録", new_user_registration_path, class: 'post' %> <!--新規登録画面に移行する-->
<% end %>

    <!-- 各地点の地点名、天気、天気画像を表示-->
    <% @location_weather_arr.each do |location_weather| %>
        <tr>
            <td><%= location_weather.city_name %></td>        
            <td><%= location_weather.today_weather %></td>
            <td><%= image_tag location_weather.today_weather_image_path, :size => '50x31'%></td>

        </tr>
    <% end %>

    
<%= link_to 'New article', new_article_path %>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>

